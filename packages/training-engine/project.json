{
  "name": "training-engine",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/training-engine/src",
  "projectType": "library",
  "tags": ["scope:engine", "type:lib"],
  "targets": {
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "oxlint src --deny-warnings --ignore-pattern 'src/**/*.spec.ts' --ignore-pattern 'src/**/*.test.ts'",
        "cwd": "packages/training-engine"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit -p tsconfig.lib.json",
        "cwd": "packages/training-engine"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx vitest run",
        "cwd": "packages/training-engine"
      }
    },
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/training-engine",
        "main": "packages/training-engine/src/index.ts",
        "tsConfig": "packages/training-engine/tsconfig.lib.json",
        "assets": ["packages/training-engine/*.md"]
      }
    }
  }
}
