{
  "name": "shared-types",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/shared-types/src",
  "projectType": "library",
  "tags": ["scope:shared", "type:lib"],
  "targets": {
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "oxlint src --deny-warnings --ignore-pattern 'src/**/*.spec.ts' --ignore-pattern 'src/**/*.test.ts'",
        "cwd": "packages/shared-types"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit -p tsconfig.lib.json",
        "cwd": "packages/shared-types"
      }
    },
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/shared-types",
        "main": "packages/shared-types/src/index.ts",
        "tsConfig": "packages/shared-types/tsconfig.lib.json",
        "assets": ["packages/shared-types/*.md"]
      }
    }
  }
}
